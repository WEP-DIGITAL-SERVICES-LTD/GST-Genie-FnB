<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
 
            <gradient 
 				android:startColor="#FF5500"
 				android:centerColor="#7777FF" 
 				android:endColor="#5555EB"
 				android:angle="270" />
                                    
            <stroke 
                android:width="2dp"
                android:color="#444444" />
            
            <corners 
                android:radius="8dp" />
            
            <padding
 				android:left="0dp"
 				android:top="0dp"
 				android:right="0dp"
 				android:bottom="0dp" />
 
        </shape>
    </item>
    
