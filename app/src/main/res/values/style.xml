<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button_Add">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">0dp</item>
        <!-- <item name="android:elevation">1dp</item> --> <!-- API level 21 is required -->
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_round_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TV_Title">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV_Owner_Details">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="Text_Hint_Size_Inc" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ET_Customized">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Custom_Dialog" parent="android:Theme.Holo.Light.Dialog" >
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TV_Billing_Item_List">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ET_Owner_Details">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="TV_Billing_Screen_Center_Alignment_black">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV_Billing_Screen_black">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TV_Billing_Screen_black_Center_Alignment">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TV_Billing_Screen_right_alignment">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV_Billing_Screen_Center_Alignment">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TV_Billing_Screen_black_right_aligned">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TV_Billing_Screen">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>