<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/margin10"
        card_view:cardMaxElevation="@dimen/margin10"
        card_view:contentPadding="@dimen/margin10"
    android:layout_margin="5dp">


        <LinearLayout
            android:id="@+id/ll_proceed_to_pay_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/round_shape_draw">

            <ImageView
                android:id="@+id/iv_proceed_to_pay_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_fav_filled"
                android:padding="5dp"
                android:visibility="gone"
                android:foregroundGravity="center"/>


            <TextView
                android:id="@+id/tv_proceed_to_pay_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                style="@style/TV_Owner_Details"
                android:text="@string/payment_modes"
                android:gravity="center"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
