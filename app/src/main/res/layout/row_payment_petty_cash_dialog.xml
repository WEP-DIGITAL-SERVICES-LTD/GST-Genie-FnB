<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dialog_title"
            android:layout_marginStart="@dimen/margin10"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Petty Cash"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_cross"
            android:gravity="center"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_title"
        android:id="@+id/rel1"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/label1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Mobile No :" />

        <EditText
            android:id="@+id/editTextMobile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label1"
            android:maxLength="10"
            android:hint="Mobile"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/label2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Name :" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label2"
            android:enabled="false"
            android:hint="Name"
            android:inputType="textPersonName" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/label3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Credit Amount :" />

        <EditText
            android:id="@+id/editTextCreditAmount"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label3"
            android:enabled="false"
            android:hint="Balance"
            android:inputType="numberSigned" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel3"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/label4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Credit Limit :" />

        <EditText
            android:id="@+id/editTextCreditLimit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label4"
            android:enabled="false"
            android:hint="Balance"
            android:inputType="numberSigned" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel4"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/label5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Amount to Pay :" />

        <EditText
            android:id="@+id/editTextAmountToPay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label5"
            android:enabled="false"
            android:hint="Balance"
            android:inputType="numberSigned" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel6"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel5"
        android:visibility="gone"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/label6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Maximum allowed payment :" />

        <EditText
            android:id="@+id/editTextAmountAllowed"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label6"
            android:enabled="false"
            android:hint="0.00"
            android:inputType="numberSigned" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewBalanceUpdate"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel6"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Balance After Payment: 100-46=54"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewBalanceUpdate"
        android:layout_below="@+id/textViewBalanceUpdate"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text_message_payment_default"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textViewMessage"
        android:layout_centerHorizontal="true">

        <com.wep.common.app.views.WepButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:visibility="gone"
            android:text="Cancel"
            android:background="@drawable/background_btn"
            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
            android:theme="@style/WepButtonWithMarigin" />

        <com.wep.common.app.views.WepButton
            android:id="@+id/btnNutral"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="Neutral"
            android:background="@drawable/background_btn"
            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
            android:theme="@style/WepButtonWithMarigin"/>

        <com.wep.common.app.views.WepButton
            android:id="@+id/btnOk"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="OK"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
            android:theme="@style/WepButtonWithMarigin"/>
    </LinearLayout>
</RelativeLayout>