<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_wep" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="40dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <CheckBox
                    android:id="@+id/cb_payment_mode_config_razor_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/razor_pay"
                    style="@style/TV_Billing_Item_List"
                    android:textSize="20dp"
                    android:textStyle="bold"/>


                <!--android:text= "@string/create_razorpay_account_message"-->


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tv_payment_mode_config_id"
                    style="@style/TV_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/key_id" />

                <EditText
                    android:id="@+id/et_payment_mode_config_key_id"
                    style="@style/ET_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:enabled="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="invisible"/>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tv_payment_mode_config_title_secret_key"
                    style="@style/TV_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/secret_key" />

                <EditText
                    android:id="@+id/et_payment_mode_config_secret_key"
                    style="@style/ET_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:enabled="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="invisible"/>

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp">

                <CheckBox
                    android:id="@+id/cb_payment_mode_config_aeps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aeps"
                    style="@style/TV_Billing_Item_List"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tv_payment_mode_config_appId"
                    style="@style/TV_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/aeps_appid" />

                <EditText
                    android:id="@+id/et_payment_mode_config_aeps_appId"
                    style="@style/ET_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:enabled="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="invisible"/>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tv_payment_mode_config_title_merchantId"
                    style="@style/TV_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/aeps_merchantId" />

                <EditText
                    android:id="@+id/et_payment_mode_config_aeps_merchantId"
                    style="@style/ET_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:enabled="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="invisible"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tv_payment_mode_config_title_aeps_secret_key"
                    style="@style/TV_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/secret_key" />

                <EditText
                    android:id="@+id/et_payment_mode_config_aeps_secretkey"
                    style="@style/ET_Owner_Details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:enabled="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="invisible"/>

            </TableRow>

        </TableLayout>
        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@string/create_razorpay_account_message"/>
                <TextView
                    android:id="@+id/tv_razorpaylink"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:textSize="20dp"
                    android:textColor="@color/blue"
                    android:text="https://www.razorpay.com"
                    android:layout_marginStart="10dp"
                    android:autoLink="web"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="120dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@string/get_registered_for_aeps_credential_message"/>
                <TextView
                    android:id="@+id/tv_aepslink"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:linksClickable="false"
                    android:textSize="20dp"
                    android:textColor="#0078D7"
                    android:textStyle="bold"
                    android:text="enquiry@wepdigital.com"
                    android:layout_marginStart="10dp"

                    />
            </LinearLayout>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/boxButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/tvHorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp_720dp_2dp_600dp"
            android:layout_marginBottom="@dimen/_2dp_720dp_2dp_600dp"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/boxSubBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5dp_720dp_4dp_600dp">

            <com.wep.common.app.views.WepButton
                android:id="@+id/btn_payment_update"
                android:layout_width="@dimen/_150dp_720dp_135dp_600dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp_720dp_7dp_600dp"
                android:background="@drawable/background_btn"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp_720dp_12sp_600dp"
                android:theme="@style/WepButtonWithMarigin" />

            <com.wep.common.app.views.WepButton
                android:id="@+id/btn_payment_clear"
                android:layout_width="@dimen/_150dp_720dp_135dp_600dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp_720dp_7dp_600dp"
                android:background="@drawable/background_btn"
                android:text="@string/clear"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp_720dp_12sp_600dp"
                android:theme="@style/WepButtonWithMarigin" />

            <com.wep.common.app.views.WepButton
                android:id="@+id/btn_payment_close"
                android:layout_width="@dimen/_150dp_720dp_135dp_600dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_btn"
                android:text="@string/close"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp_720dp_12sp_600dp"
                android:theme="@style/WepButtonWithMarigin" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
