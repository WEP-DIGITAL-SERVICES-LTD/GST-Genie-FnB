<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wepindia.pos.fragments.FragmentInwardStock">


<RelativeLayout
    android:id="@+id/lnrPriceStock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

    <RelativeLayout
        android:id="@+id/boxTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvHorizontalLine"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="0.15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.7"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.85"
                        android:orientation="horizontal">

                        <com.wep.common.app.views.WepButton
                            android:id="@+id/btn_Supplier"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_btn"
                            android:textColor="@android:color/white"
                            android:theme="@style/WepButtonWithMarigin"
                            android:minHeight="40dp"
                            android:text="Supplier" />


                        <com.wep.common.app.views.WepButton
                            android:id="@+id/btn_InwardItem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_btn"
                            android:textColor="@android:color/white"
                            android:theme="@style/WepButtonWithMarigin"
                            android:minHeight="40dp"
                            android:text="Item" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvHorizontalLine1"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.15">



                        <ListView
                            android:id="@+id/listViewFilter1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:divider="#000000"
                            android:dividerHeight="1dp"
                            />

                        <TextView
                            android:id="@+id/tvStockdeptline"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#000000" />
<!-->
                        <GridView
                            android:id="@+id/listViewFilter3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />
<!-->
                        <ListView
                            android:id="@+id/listViewFilter3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:divider="#000000"
                            android:dividerHeight="1dp"
                            />
                    </LinearLayout>
                </LinearLayout>


            <TextView
                android:id="@+id/tvVerticalLine"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.3"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TableRow
                            android:id="@+id/rowItemLongName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true">

                            <TextView
                                android:id="@+id/tvItemLongName"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Item Name"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/txtItemLongNameValue"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="text"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/rowItemExistingStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvItemExistingStock"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Existing Stock"
                                android:paddingRight="20dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/tvItemExistingStockValue"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:text="0"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/item_uom"/>
                        </TableRow>

                        <TableRow
                            android:id="@+id/rowItemNewStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvItemNewStock"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="New Stock"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <EditText
                                android:id="@+id/etItemNewStock"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:ems="5"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:inputType="numberDecimal"
                                android:selectAllOnFocus="true" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/rowItemRate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvItemRate1"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Weighted Avg Rate"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/etItemRate1"
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:ems="5"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:selectAllOnFocus="true" />

                        </TableRow>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="*Please note, new stock will be added to existing stock \n*To update stock, kindly select supplier and then item."/>
                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/tvHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/boxBtn"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/boxBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.wep.common.app.views.WepButton
            android:id="@+id/btnUpdateStock"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn"
            android:textColor="@android:color/white"
            android:theme="@style/WepButtonWithMarigin"
            android:minHeight="40dp"
            android:onClick="UpdateStock"
            android:text="Update" />

        <com.wep.common.app.views.WepButton
            android:id="@+id/btnClearStock"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_btn"
            android:textColor="@android:color/white"
            android:theme="@style/WepButtonWithMarigin"
            android:minHeight="40dp"
            android:onClick="ClearStock"
            android:text="Clear" />

        <com.wep.common.app.views.WepButton
            android:id="@+id/btnCloseStock"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_btn"
            android:textColor="@android:color/white"
            android:theme="@style/WepButtonWithMarigin"
            android:minHeight="40dp"
            android:onClick="CloseStock"
            android:text="Close" />
    </LinearLayout>

</RelativeLayout>

</FrameLayout>