<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:id="@+id/rowCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tvSNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="5dp"
            android:text="S.No"
            android:layout_weight="1.1"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <TextView
            android:id="@+id/tvSupplierName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier Name"

            android:layout_weight="0.9"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <TextView
            android:id="@+id/tvSupplierPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier Phone"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <TextView
            android:id="@+id/tbSupplierGSTIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Supplier GSTIN"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <TextView
            android:id="@+id/tvSupplierAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text=" Supplier Address"
            android:layout_marginEnd="15dp"
            android:layout_weight="0.75"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />


        <ImageView
            android:id="@+id/imgBtnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

    </LinearLayout>
</LinearLayout>