                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin1"
                    android:text="IGST Rate"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="35sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin1"
