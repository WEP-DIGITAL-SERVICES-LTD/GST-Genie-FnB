            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_period"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="6. Taxable outwardsupplies to a consumer where Place of Supply(State Code) is other than the State where supplier is located (Inter-state supplier) and invoice value is more than Rs. 2.5 lakhs. (figures in Rs)"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_b2cl"
            android:id="@+id/linear_b2cl"
            android:orientation="vertical">
            <LinearLayout
