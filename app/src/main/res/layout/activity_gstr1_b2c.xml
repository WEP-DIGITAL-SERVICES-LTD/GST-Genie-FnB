                    android:layout_width="37sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:text="CGST Amt"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="37sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
