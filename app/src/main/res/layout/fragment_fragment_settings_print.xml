<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_printer_configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="PRINT KOT"
                            android:textAllCaps="false"
                            android:textSize="@dimen/main_text_heading_17sp_720dp_15sp_600dp" />

                        <Spinner
                            android:id="@+id/spnr1"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" />

                        <Button
                            android:id="@+id/saveKotPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Save KOT Printer"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"

                            android:theme="@style/WepButtonWithMarigin" />

                        <Button
                            android:id="@+id/resetKotPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="PRINT BILL"
                            android:textAllCaps="false"
                            android:textSize="@dimen/main_text_heading_17sp_720dp_15sp_600dp" />

                        <Spinner
                            android:id="@+id/spnr2"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" />

                        <Button
                            android:id="@+id/saveBillPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Save Bill Printer"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin" />

                        <Button
                            android:id="@+id/resetBillPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="PRINT REPORT"
                            android:textAllCaps="false"
                            android:textSize="@dimen/main_text_heading_17sp_720dp_15sp_600dp" />

                        <Spinner
                            android:id="@+id/spnr3"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" />

                        <Button
                            android:id="@+id/saveReportPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Save Report Printer"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin" />

                        <Button
                            android:id="@+id/resetReportPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="PRINT RECEIPT"
                            android:textAllCaps="false"
                            android:textSize="@dimen/main_text_heading_17sp_720dp_15sp_600dp" />

                        <Spinner
                            android:id="@+id/spnr4"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" />

                        <Button
                            android:id="@+id/saveReceiptPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Save Receipt Printer"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin" />

                        <Button
                            android:id="@+id/resetReceiptPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp_720dp_4dp_600dp"
                            android:background="@drawable/background_btn"
                            android:minHeight="40dp"
                            android:text="Reset"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/button_16sp_720dp_14sp_600dp"
                            android:theme="@style/WepButtonWithMarigin"
                            android:visibility="visible" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDatabaseHLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/PrinterboxBtn"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/PrinterboxBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/_5dp_720dp_4dp_600dp">


        <Button
            android:id="@+id/btnClosePrinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_btn"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_14sp_720dp_12sp_600dp"
            android:theme="@style/WepButtonWithMarigin" />
    </LinearLayout>

</RelativeLayout>
