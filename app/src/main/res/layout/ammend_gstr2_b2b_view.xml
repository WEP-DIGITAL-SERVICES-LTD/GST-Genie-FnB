<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvSNo"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvgstin_ori"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="GSTIN"/>
        <TextView
            android:id="@+id/tvinvno_ori"
            android:layout_width="75dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Inv No"/>
        <TextView
            android:id="@+id/tvinvdate_ori"
            android:layout_width="105dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Inv Date"/>

        <TextView
            android:id="@+id/tvgstin_rev"
            android:layout_width="183dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="GSTIN"/>

        <TextView
            android:id="@+id/tvinvno_rev"
            android:layout_width="75dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Inv No"/>
        <TextView
            android:id="@+id/tvinvdate_rev"
            android:layout_width="107dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Inv Date"/>
        <TextView
            android:id="@+id/tvhsn"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HSN"/>
        <TextView
            android:id="@+id/tvg_s"
            android:layout_width="51dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="86dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tvtaxableValue"
            android:layout_width="95dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvIGSTAmount"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Amt"/>

        <TextView
            android:id="@+id/tvCGSTAmount"
            android:layout_width="80dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Amt"/>

        <TextView
            android:id="@+id/tvSGSTAmount"
            android:layout_width="80dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Amt"/>


        <ImageButton

            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btnItemDelete"/>
    </LinearLayout>
</LinearLayout>