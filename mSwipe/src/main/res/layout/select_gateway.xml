<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_REL_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <include
        android:id="@+id/top_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/top_bar_layout" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="20dp"
        android:background="#f5f5f5" >

        <CheckBox
            android:id="@+id/setgateway_checkbox"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="0dp"
            android:text="Labs Gateway"
            android:textColor="#000000"
            android:textSize="18dp"
            />
        <CheckBox
            android:id="@+id/setnetworkid_checkbox"
            android:layout_below="@+id/setgateway_checkbox"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/setgateway_checkbox"
            android:layout_marginRight="4dp"
            android:layout_marginTop="0dp"
            android:text="Wifi"
            android:textColor="#000000"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/lbl_networkid"
            android:layout_below="@+id/setnetworkid_checkbox"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/setgateway_checkbox"
            android:layout_marginRight="4dp"
            android:layout_marginTop="0dp"
            android:text="Mac"
            android:textColor="#000000"
            android:textSize="18dp"
            />
        
        
 	</RelativeLayout>
    
    

</RelativeLayout>